# Database Configuration
# Railway will provide MySQL database credentials automatically
# Copy these values from Railway MySQL plugin environment variables
MYSQL_DB=railway
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_HOST=
MYSQL_PORT=3306

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL (for CORS)
# Set this to your Vercel deployment URL (e.g., https://skillsphere.vercel.app)
FRONTEND_URL=

# JWT Secret (REQUIRED - Generate a strong random string)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Example: b45d03da1ee1079c7609cc536c7069be78df0dbe03568f312c42a413ec5696961c75c9a4167352c8fb5fd24e9624e69afb29af587408b3bae2f7bda89d20c7be
# IMPORTANT: Use the SAME secret in both development and production for consistent token validation
JWT_SECRET=

# Super Admin Credentials (Initial setup - will be created by seed script)
SUPER_ADMIN_EMAIL=admin@yourcompany.com
SUPER_ADMIN_PASSWORD=

# SMTP Configuration for Email (OTP)
#
# OPTION 1: Gmail (works for Gmail recipients, may not work for institutional emails)
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your_app_password
#
# OPTION 2: SendGrid (RECOMMENDED - better deliverability for ALL email providers)
# Sign up free at: https://sendgrid.com (100 emails/day free)
# Get API key from: Settings > API Keys > Create API Key
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your_sendgrid_api_key
#
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Firebase Configuration (for Google OAuth)
# Get these from Firebase Console > Project Settings > Service Accounts
# Download the JSON file and extract these values
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
